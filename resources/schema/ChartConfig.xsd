<?xml version="1.0" encoding="utf-8" ?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:cosim="http://github.com/Ecos-platform/libcosim/resources/schema/ChartConfig"
           elementFormDefault="qualified"
           targetNamespace="http://github.com/Ecos-platform/libcosim/resources/schema/ChartConfig">

    <xs:element name="ChartConfig" type="cosim:TChartConfig"/>

    <xs:complexType name="TChartConfig">
        <xs:sequence>
            <xs:element name="chart" type="cosim:TChart" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="TChart">
        <xs:choice>
            <xs:element name="xyseries" type="cosim:TXYSeriesChart"/>
            <xs:element name="timeseries" type="cosim:TTimeSeriesChart"/>
        </xs:choice>
    </xs:complexType>

    <xs:complexType name="TXYSeriesChart">
        <xs:sequence>
            <xs:element name="series" type="cosim:TXYSeries" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="title" type="xs:string" use="required"/>
        <xs:attribute name="xLabel" type="xs:string" use="required"/>
        <xs:attribute name="yLabel" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="TXYSeries">
        <xs:sequence>
            <xs:element name="x" type="cosim:TVariableIdentifier"/>
            <xs:element name="y" type="cosim:TVariableIdentifier"/>
        </xs:sequence>
        <xs:attribute name="name" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="TTimeSeriesChart">
        <xs:sequence>
            <xs:element name="series" type="cosim:TTimeSeries"/>
        </xs:sequence>
        <xs:attribute name="title" type="xs:string" use="required"/>
        <xs:attribute name="label" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="TTimeSeries">
        <xs:sequence>
            <xs:element name="component" type="cosim:TComponent" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="TVariableIdentifier">
        <xs:attribute name="component" type="xs:string" use="required"/>
        <xs:attribute name="variable" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="TComponent">
        <xs:sequence>
            <xs:element name="variable" type="cosim:TVariable" maxOccurs="unbounded"/>
        </xs:sequence>
        <xs:attribute name="name" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="TVariable">
        <xs:sequence>
            <xs:element name="linearTransformation" type="cosim:TLinearTransformation" minOccurs="0"/>
        </xs:sequence>
        <xs:attribute name="name" type="xs:string" use="required"/>
    </xs:complexType>

    <xs:complexType name="TLinearTransformation">
        <xs:attribute name="offset" type="xs:double" default="0"/>
        <xs:attribute name="factor" type="xs:double" default="1"/>
    </xs:complexType>

</xs:schema>
